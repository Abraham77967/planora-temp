/* Main Goals Section Styles */
.main-goals-section {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    border-radius: 16px;
    padding: 20px;
    width: 65%;
    text-align: center;
    animation: slideInUp 0.7s ease forwards;
}

.main-goals-section h3 {
    color: #161853;
    font-size: 1.8rem;
    margin-bottom: 20px;
    position: relative;
    display: inline-block;
    font-family: 'Overpass', sans-serif;
    font-weight: 700;
}

.main-goals-section h3:after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #EC255A, #FF6B6B);
    border-radius: 3px;
}

.goals-container {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin: 25px 0;
}

.goal-item {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 14px 18px;
    text-align: left;
    position: relative;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    opacity: 0;
    animation: slideInLeft 0.5s ease forwards;
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    gap: 12px;
}

.goal-item label {
    flex: 1;
    cursor: pointer;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Main goals deadline display */
.goal-item .days-left {
    margin-left: auto;
    margin-right: 5px;
}

.goal-item input[type="checkbox"] {
    appearance: none;
    -webkit-appearance: none;
    width: 22px;
    height: 22px;
    border: 2px solid #292C6D; /* Medium blue */
    border-radius: 5px;
    cursor: pointer;
    position: relative;
    transition: all 0.2s ease;
    flex-shrink: 0; /* Prevent checkbox from shrinking */
}

.goal-item input[type="checkbox"]:checked {
    background-color: #EC255A; /* Accent pink */
    border-color: #EC255A;
}

.goal-item input[type="checkbox"]:checked::before {
    content: '\2713'; /* Checkmark character */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 14px;
    font-weight: bold;
}

.goal-item label {
    color: #292C6D;
    font-size: 1.1rem;
    margin: 0; /* Reset margin */
    /* padding-left: 28px; Remove direct padding, rely on gap */
    position: relative;
    flex-grow: 1; /* Allow text to take available space */
    cursor: pointer; /* Make label clickable for checkbox */
    transition: color 0.3s ease;
}

/* Remove old :before pseudo-element for the target icon */
/* .goal-item p:before { ... } */

.goal-item.completed-goal label {
    text-decoration: line-through;
    color: #777; /* Muted color for completed text */
    opacity: 0.7;
}

.goal-item.completed-goal {
    background: rgba(230, 230, 230, 0.1); /* Slightly different background for completed */
    opacity: 0.8;
}

/* Input Styles */
input[type="text"], 
input[type="time"], 
textarea {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 12px 16px;
    color: #292C6D;
    font-size: 1rem;
    width: 100%;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

