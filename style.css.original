    width: 22px;
    height: 22px;
    border: 2px solid #292C6D; /* Medium blue */
    border-radius: 5px;
    cursor: pointer;
    position: relative;
    transition: all 0.2s ease;
    flex-shrink: 0; /* Prevent checkbox from shrinking */
}

.goal-item input[type="checkbox"]:checked {
    background-color: #EC255A; /* Accent pink */
    border-color: #EC255A;
}

.goal-item input[type="checkbox"]:checked::before {
    content: '\2713'; /* Checkmark character */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 14px;
    font-weight: bold;
}

.goal-item label {
    color: #292C6D;
    font-size: 1.1rem;
    margin: 0; /* Reset margin */
