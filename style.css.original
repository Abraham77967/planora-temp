}

.goals-container {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin: 25px 0;
}

.goal-item {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 14px 18px;
    text-align: left;
    position: relative;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    opacity: 0;
    animation: slideInLeft 0.5s ease forwards;
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    gap: 12px;
}

.goal-item label {
    flex: 1;
    cursor: pointer;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Main goals deadline display */
.goal-item .days-left {
    margin-left: auto;
    margin-right: 5px;
}

.goal-item input[type="checkbox"] {
    appearance: none;
    -webkit-appearance: none;
    width: 22px;
    height: 22px;
    border: 2px solid #292C6D; /* Medium blue */
    border-radius: 5px;
    cursor: pointer;
    position: relative;
    transition: all 0.2s ease;
    flex-shrink: 0; /* Prevent checkbox from shrinking */
}

.goal-item input[type="checkbox"]:checked {
    background-color: #EC255A; /* Accent pink */
    border-color: #EC255A;
}

.goal-item input[type="checkbox"]:checked::before {
    content: '\2713'; /* Checkmark character */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 14px;
    font-weight: bold;
}

.goal-item label {
    color: #292C6D;
    font-size: 1.1rem;
