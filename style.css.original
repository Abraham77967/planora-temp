.panel-checklist li input[type="checkbox"] {
    margin-right: 10px;
    cursor: pointer;
}

.panel-checklist li label {
    cursor: pointer;
    flex: 1;
}

.panel-checklist label.completed {
    text-decoration: line-through;
    color: #777;
    transition: all 0.3s ease;
}

.delete-item-button {
